public class Product {

	public Product(String na, double pri){
		name=na;
		price=pri;
	}
	
	String getName(){
		return name;
	}
	
	double getPrice(){
		return price;
	}
	
	public void setName(String name){
		this.name = name;
	}
	
	public void setPrice(double price){
		this.price = price;
	}
	
	private String name;
	private double price;
	
}
